{% assign settings = section.settings %}
{% assign text_color = settings.text_color %}


<style>
  .icon {
    width: 1em;
    height: 1em;
    vertical-align: -0.15em;
    fill: currentColor;
    overflow: hidden;
  }

  /*topImage*/
  .topImage {
    width: 100%;
    position: relative;
  }

  .mainBanner {
    width: 100%;
    height: 100%;
  }

  .mainBanner img {
    width: 100%;
  }

  .topImageText {
    position: absolute;
    bottom: 10%;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
  }

  .topImageText h1 {
    font-size: 2vw;
    font-weight: bold;
    color: inherit;

  }

  .topImageText h2 {
    font-size: 1.2vw;
    font-weight: 400;
    margin: 0 0 1.5vw 0;
    color: inherit;
  }

  .topImageText .btn {
    display: inline-block;
    height: 2.5vw;
    line-height: 2.5vw;
    text-align: center;
    padding: 0 1.67vw;
    border: 1px solid {{text_color}};
    border-radius: 60px;
    font-size: 0.83vw;
    cursor: pointer;
    font-weight: 600;
    color: inherit
  }

  .topImageText .btn:hover {
    background: #00CC88;
    color: white;
    border-color: #00CC88;
  }

  .topImageText .icon {
    width: .8em;
    height: .8em;
  }

  @media (max-width: 767px) {
    .topImageText {
      bottom: 15%;
      width: 100%;
      padding: 0 20px;
    }

    .topImageText h1 {
      font-size: 28px;
      line-height: 1.2;
    }

    .topImageText h2 {
      font-size: 16px;
      margin-top: 8px;
      line-height: 1.2;
    }

    .topImageText .btn {
      font-size: 16px;
      height: 40px;
      width: 140px;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 25px auto 0;
      line-height: 1;
    }
  }
  {{section.settings.custom_style}}
  /*topImage*/
</style>


<div class="{{ settings.className }}">
  <a href="{{settings.link}}">
    <div class="topImage">
      <div class="mainBanner">
        {% render 'ug-picture',
                pc_image_url: settings.pc_image_url,
                mobile_image_url: settings.mobile_image_url,
                alt: settings.title
        %}
      </div>
      <div class="topImageText" style="color: {{ text_color }}">
        <h1 class="title">{{ settings.title }}</h1>
        <h2 class="subTitle">{{ settings.subtitle }}</h2>
        <div class="btn">
          <span>{{ settings.button_text }}</span>
          <svg class="icon" aria-hidden="true">
            <use xlink:href="#icon-xiayiye"></use>
          </svg>
        </div>
      </div>
    </div>
  </a>
</div>

{% schema %}
{
  "name": "UGreen Top Image",
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "text",
      "id": "pc_image_url",
      "label": "Pc image url"
    },
    {
      "type": "text",
      "id": "mobile_image_url",
      "label": "Mobile image url"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link",
      "info": "跳转链接"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文案配色",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "className",
      "label": "class name",
      "info": "自定义你轮播类名"
    },
    {
      "type": "textarea",
      "id": "custom_style",
      "label": "Custom style",
      "info": "添加自定义的样式"
    }
  ]
}
{% endschema %}
