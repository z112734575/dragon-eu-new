      "type": "text",
      "id": "mobile_image_url",
      "label": "mobile banner url"
    },
    {
      "type": "text",
      "id": "pc_image_url",
      "label": "pc banner url"
    },
    {
      "type": "text",
      "id": "banner_title",
      "label": "Banner Title"
    },
    {
      "type": "text",
      "id": "banner_sub_text",
      "label": "Banner Sub text"
    },
    {
      "type": "text",
      "id": "banner_sub_text2",
      "label": "Banner Sub text2"
    },
    {
      "type": "text",
      "id": "banner_button_text",
      "label": "Banner button text"
    },
    {
      "type": "text",
      "id": "banner_button_url",
      "label": "Banner button url"
    }
  ],
  "presets": [
    {
      "name": "Christmas banner"
    }
  ],
  "templates": ["page"]
}
{% endschema %}

