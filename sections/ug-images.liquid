{% liquid
    assign settings = section.settings
    assign pc_image_url = settings.pc_image_url
    assign mobile_image_url = settings.mobile_image_url
    assign title = settings.title
    assign description = settings.description
    assign btn_text = settings.btn_text
    assign title_color = settings.title_color
    assign desc_color = settings.desc_color
    assign btn_color = settings.btn_color
    assign mobile_text_top = settings.mobile_text_top
%}
<style>
    /*topImage*/
    .topImage {
        width: 100%;
        position: relative;
    }
    .mainBanner {
        width: 100%;
        height: 100%;
    }
    .mainBanner img {
        width: 100%;
    }
    .topImageText {
        position: absolute;
        top: 5.2vw;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
        color: white;
    }
    .topImageText h1 {
        font-size: 2vw;
        font-weight: bold;
        color: inherit;
    }
    .topImageText h2 {
        font-size: 1.2vw;
        font-weight: 400;
        margin: .5vw 0 1.2vw 0;
        color: inherit;
    }
    .topImageText .btn {
        display: inline-block;
        height: 2.5vw;
        line-height: 2.5vw;
        text-align: center;
        padding: 0 1.67vw;
        border: 1px solid;
        border-radius: 60px;
        font-size: 0.83vw;
        cursor: pointer;
        font-weight: 600;
        color: inherit;
    }
    .topImageText .btn:hover {
        background: {{ section.settings.hover_btn_color }} !important;
        color: white !important;
        border-color: {{ section.settings.hover_btn_color }} !important;
    }
    @media (max-width: 767px) {
        .topImageText {
            top: {{ mobile_text_top |  default: "15%"}};
            width: 100%;
            padding: 0 20px;
        }
        .topImageText h1 {
            font-size: 28px;
            line-height: 1.2;
        }
        .topImageText h2 {
            font-size: 16px;
            margin-top: 8px;
            line-height: 1.2;
        }
        .topImageText .btn {
            font-size: 16px;
            height: 40px;
            width: 140px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 25px auto 0;
            line-height: 1;
        }
    }
    /*topImage*/
</style>

<div>
    <a href="/products/ugreen-nexode-200w-usb-c-desktop-charger">
        <div class="topImage">
            <div class="mainBanner">
                {% render "ug-picture", pc_image_url: pc_image_url, mobile_image_url: mobile_image_url, alt: title %}
            </div>
            <div class="topImageText" >
                <h1 class="title" style="color: {{ title_color }}">{{ title }}</h1>
                <h2 class="subTitle" style="color: {{ desc_color }}">{{ description }}</h2>
                {% if btn_text != '' %}
                    <div class="btn" style="border-color: {{ btn_color }};color: {{ btn_color }}">
                        <span>{{ btn_text }}</span>
                        <svg class="icon" aria-hidden="true">
                            <use xlink:href="#icon-xiayiye"></use>
                        </svg>
                    </div>
                {% endif %}
            </div>
        </div>
    </a>
</div>

{% schema %}
{
  "name": "UGREEN Images",
  "settings": [
    {
      "type": "header",
      "content": "图片设置"
    },
    {
      "type": "text",
      "id": "pc_image_url",
      "label": "PC 端图片链接"
    },
    {
      "type": "text",
      "id": "mobile_image_url",
      "label": "手机端图片链接"
    },
    {
      "type": "text",
      "id": "title",
      "label": "图片标题"
    },
    {
      "type": "text",
      "id": "description",
      "label": "图片描述"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "按钮文案",
      "default": "按钮文案"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title颜色",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "desc_color",
      "label": "Description颜色",
      "default": "#727273"
    },
    {
      "type": "color",
      "id": "btn_color",
      "label": "Button颜色",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "hover_btn_color",
      "label": "Button hover 颜色",
      "default": "#00CC88"
    },
    {
      "type": "text",
      "id": "mobile_text_top",
      "label": "移动端文字距离顶部高度",
      "default": "15%"
    }
  ]
}
{% endschema %}

