{% liquid
  assign settings = section.settings
  assign pc_image_url = settings.pc_image_url
  assign mobile_image_url = settings.mobile_image_url
  assign title = settings.title
  assign description = settings.description
  assign btn_text = settings.btn_text
  assign formula_text = settings.formula_text
  assign money_text = settings.money_text
  assign integral_text = settings.integral_text
  assign money_text_array = money_text | split: ','
  assign integral_text_array = integral_text | split: ','
  assign currencySymbol = cart.currency.symbol
  assign button_link = settings.button_link
%}

<div class="ug-day-program-wrap">
  <div class="ug-day-program-main ug-day-program-main-target">
    <div class="ug-day-program-img">
      {% render 'ug-picture', pc_image_url: pc_image_url, mobile_image_url: mobile_image_url, alt: title %}
    </div>
    <div class="ug-day-program-inner">
      <div class="ug-day-program-inner-top">
        <div class="ug-day-program-title">{{ title }}</div>
        <div class="ug-day-program-desc">{{ description }}</div>
        <a href="{{ button_link }}">
          <div class="ug-day-program-btn">
            <span>{{ btn_text }}</span>
            <svg class="icon" aria-hidden="true">
              <use xlink:href="#icon-xiayiye"></use>
            </svg>
          </div>
        </a>
      </div>
      <div class="ug-day-program-inner-bottom">
        <div class="ug-day-program-inner-bottom-top">
          <span class="formula-icon">
            <svg class="icon" aria-hidden="true">
              <use xlink:href="#icon-redeem"></use>
            </svg>
          </span>
          <div class="ug-day-program-inner-bottom-top-formula">{{ formula_text }} Points = {{ currencySymbol }}1</div>
        </div>
        <div class="ug-day-program-inner-bottom-bottom">
          {% for i in (0..2) %}
            <div class="ug-day-program-inner-bottom-bottom-money-wrap">
              <div class="ug-day-program-inner-bottom-bottom-money">
                <span class="currency">{{ currencySymbol }}</span>
                {{ money_text_array[i] }}
              </div>
              <div class="ug-day-program-inner-bottom-bottom-integral">
                {{ integral_text_array[i] }}
                Points
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
    <section class="green-home-whybar-wrap">
      <div class="green-home-whybar swiper">
        <ul class="green-home-whybar-ship swiper-wrapper">
          <li class="swiper-slide">
            <span class="swiper-icon">
              <svg class="icon" aria-hidden="true">
                <use xlink:href="#icon-Discounts"></use>
              </svg>
            </span>
            Redeem Points For Extra Discounts
          </li>
          <li class="swiper-slide">
            <span class="swiper-icon">
              <svg class="icon" aria-hidden="true">
                <use xlink:href="#icon-bell"></use>
              </svg>
            </span>
            Early Promotion Alerts
          </li>
          <li class="swiper-slide">
            <span class="swiper-icon">
              <svg class="icon" aria-hidden="true">
                <use xlink:href="#icon-shield"></use>
              </svg>
            </span>
            30-Day Price Guarantee
          </li>
        </ul>
      </div>
    </section>
  </div>
</div>

<script
  src="https://cdn.shopify.com/s/files/1/0257/5246/9566/files/swiper-bundle.min_23a60c44-0efc-4129-bf9f-c046f688609a.js?v=1655275790"
></script>

<script>
  $(function() {
      if (isMobile()) {
          const whybarSwiper = new Swiper('.green-home-whybar', {
              slidesPerView: 1,
              loop: true,
              autoplay: {
                  delay: 5000,
              },
          })
      } else {
          const whybarSwiper = new Swiper('.green-home-whybar', {
              slidesPerView: 3,
              spaceBetween: 30,
              pagination: {
                  el: ".swiper-pagination",
                  clickable: true,
              }
          })
      }
      const targetElement = document.getElementsByClassName('ug-day-program-main')[0];
      const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset;
      const screenPosition = window.innerHeight;

      function scrollHandler() {
          if (window.pageYOffset + screenPosition > targetPosition) {
              targetElement.classList.add('visible');
          }
      }

      window.addEventListener('scroll', scrollHandler);
  })
</script>

