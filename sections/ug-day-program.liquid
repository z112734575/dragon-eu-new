<style>
  #MainContent {
      background: rgb(245, 244, 247);
      font-family: Poppins-Regular, Poppins;
      position: relative;
      z-index: 2;
  }
  .t4s-footer {
      position: relative;
      z-index: 3;
  }
  .ug-day-program-main.visible {
      opacity: 1;
  }
  .ug-day-program-main.visible .ug-day-program-inner {
      opacity: 1;
      transform: translateY(0);
  }
  .ug-day-program-wrap {
      margin-top: 120px;
      padding-left: 16.67vw;
  }
  .ug-day-program-main {
      position: relative;
      opacity: 0;
      transition: opacity 1s ease-in-out;
  }
  .ug-day-program-img {
      width: 100%;
      overflow: hidden;
      border-radius: 12px 0 0 12px;
  }
  .ug-day-program-inner {
      width: 31.25vw;
      position: absolute;
      right: 17vw;
      top: -12px;
      transform: translateY(50px);
      opacity: 0;
      transition: all 1s ease-in-out 0.5s;
  }
  .ug-day-program-inner::before {
      content: '';
      width: 0;
      height: 0;
      border-top: 6px solid transparent;
      border-right: 6px solid #A7A7A7;
      border-bottom: 6px solid #A7A7A7;
      border-left: 6px solid transparent;
      position: absolute;
      top: 0;
      left: 0;
      transform: translateX(-100%);
  }
  .ug-day-program-inner-top {
      padding: 3.125vw 2.604vw;
      background: white;
      color: black;
  }
  .ug-day-program-title {
      font-weight: 700;
      font-size: 1.875vw;
      line-height: 1.2;
  }
  .ug-day-program-desc {
      font-weight: 400;
      font-size: 1vw;
      line-height: 1.5;
      margin-top: 0.625vw;
      color: #727273;
  }
  .ug-day-program-btn {
      display: inline-block;
      height: 2.5vw;
      line-height: 2.5vw;
      text-align: center;
      padding: 0 1.67vw;
      border-radius: 60px;
      font-size: 0.83vw;
      cursor: pointer;
      font-weight: 600;
      color: black;
      border: 1px solid black;
      margin-top: 1vw;
  }
  .ug-day-program-btn:hover {
      background: #00CC88;
      color: white !important;
      border-color: #00CC88;
  }
  .ug-day-program-inner-bottom {
      background: rgba(255, 255, 255, 0.4);
      backdrop-filter: blur(3px);
      padding: 2.08vw 1.875vw;
  }
  .ug-day-program-inner-bottom-top {
      display: flex;
      align-items: center;
      font-size: 1.46vw;
      color: black;
      justify-content: center;
      padding-bottom: 1.56vw;
      border-bottom: 1px solid white;
      margin-bottom: 1.56vw;
      font-weight: 600;
  }
  .formula-icon {
      font-size: 2.08vw;
      line-height: 1;
      margin-right: 4px;
  }
  .ug-day-program-inner-bottom-bottom {
      display: flex;
      justify-content: space-around;
  }
  .ug-day-program-inner-bottom-bottom-money-wrap {
      display: flex;
      justify-content: space-around;
      font-size: 1.04vw;
      flex-direction: column;
      font-weight: 600;
  }
  .ug-day-program-inner-bottom-bottom-money {
      font-size: 2.6vw;
      line-height: 1;
      color: #309A6A;
      display: flex;
      justify-content: center;
  }
  .ug-day-program-inner-bottom-bottom-money .currency {
      font-size: 1.65vw;
      font-weight: 400;
  }
  .ug-day-program-inner-bottom-bottom-integral {
      color: #666;
      font-weight: 400;
  }
  @media (max-width: 767px) {
      .ug-day-program-main.visible .ug-day-program-inner {
          opacity: 1;
          transform: translate(50%, 0);
      }
      .ug-day-program-wrap {
          margin-top: 80px;
          padding-left: 0;
      }
      .ug-day-program-main {
          position: relative;
      }
      .ug-day-program-img {
          width: 100%;
          border-radius: initial;
          overflow: hidden;
      }
      .ug-day-program-inner {
          width: 90%;
          position: absolute;
          right: 50%;
          top: -12px;
          transform: translate(50%, 50px);
      }
      .ug-day-program-inner-top {
          padding:40px 20px;
          background: white;
          color: black;
      }
      .ug-day-program-title {
          font-weight: 700;
          font-size: 24px;
          line-height: 1.2;
      }
      .ug-day-program-desc {
          font-weight: 400;
          font-size: 14px;
          line-height: 1.5;
          margin-top: 12px;
          color: #727273;
      }
      .ug-day-program-btn {
          display: inline-block;
          height: 38px;
          line-height: 38px;
          text-align: center;
          padding: 0 20px;
          border-radius: 40px;
          font-size: 16px;
          cursor: pointer;
          font-weight: 400;
          color: black;
          border: 1px solid black;
          margin-top: 12px;
      }
      .ug-day-program-btn:hover {
          background: #00CC88;
          color: white !important;
          border-color: #00CC88;
      }
      .ug-day-program-inner-bottom {
          background: rgba(255, 255, 255, 0.4);
          backdrop-filter: blur(3px);
          padding: 30px 16px;
      }
      .ug-day-program-inner-bottom-top {
          font-size: 20px;
          padding-bottom: 12px;
          margin-bottom: 12px;
      }
      .ug-day-program-inner-bottom-top .formula-icon {
          font-size: 24px;
      }
      .ug-day-program-inner-bottom-bottom-money-wrap {
          font-size: 16px;
      }
      .ug-day-program-inner-bottom-bottom-money {
          font-size: 36px;
      }
      .ug-day-program-inner-bottom-bottom-money .currency {
          font-size: 20px;
      }
  }
</style>
