{% liquid
    assign setting = section.settings
    assign enable = setting.enable
    assign pc_image_url = setting.pc_img_url
    assign mobile_image_url = setting.mobile_img_url
    assign pc_height = setting.pc_height
    assign mobile_height = setting.mobile_height
    assign link = setting.link
%}
{% if enable %}
    <style>
        .ug-activity-bar {
            height: {{ pc_height }};
        }
        @media screen and (max-width: 768px) {
            .ug-activity-bar {
                height: {{ mobile_height }};
            }
        }
    </style>
    <div class="ug-activity-bar">
        <a href="{{ link }}">
            {% render "ug-picture", pc_image_url: pc_image_url, mobile_image_url: mobile_image_url, alt: "UGREEN" %}
        </a>
    </div>
{% endif %}

{%- schema -%}
{
  "name": "Top activity bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable",
      "label": "是否打开横幅",
      "default": true
    },
    {
      "type": "text",
      "id": "pc_img_url",
      "label": "pc 端横幅链接"
    },
    {
      "type": "text",
      "id": "mobile_img_url",
      "label": "移动端横幅链接"
    },
    {
      "type": "text",
      "id": "pc_height",
      "label": "pc端横幅高度",
      "default": "80px"
    },
    {
      "type": "text",
      "id": "mobile_height",
      "label": "移动端横幅高度",
      "default": "100px"
    },
    {
      "type": "url",
      "id": "link",
      "label": "跳转链接"
    }
  ]
}
{% endschema %}