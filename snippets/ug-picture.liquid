{% liquid
    assign pc_image_type = pc_image_url | split: "." | last | prepend: "."
    assign pc_image_url_split = pc_image_url | split: pc_image_type | first
    assign mobile_image_type = mobile_image_url | split: "." | last | prepend: "."
    assign mobile_image_url_split = mobile_image_url | split: mobile_image_type | first
%}

<picture>
    <source srcset="{{ mobile_image_url_split }}_750x{{ mobile_image_type }}"
            media="(max-width: 375px)">
    <source srcset="{{ mobile_image_url_split }}_1536x{{ mobile_image_type }}"
            media="(max-width: 768px)">
    <source srcset="{{ pc_image_url_split }}_1920x{{ pc_image_type }}"
            media="(max-width: 1080px)">
    <source srcset="{{ pc_image_url_split }}_2560x{{ pc_image_type }}"
            media="(max-width: 1200px)">
    <source srcset="{{ pc_image_url_split }}_3840x{{ pc_image_type }}"
            media="(max-width: 1920px)">
    <img src="{{ pc_image_url }}" alt="{{ alt }}" loading="lazy" width="100%" height="auto">
</picture>