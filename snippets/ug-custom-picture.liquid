{% liquid
    assign pc_image = pc_image
    assign mobile_image = mobile_image
    assign alt = alit
%}

<picture>
    <source srcset="{{ mobile_image | img_url: '750x' }}"
            media="(max-width: 375px)">
    <source srcset="{{ mobile_image | img_url: '1536x' }}"
            media="(max-width: 768px)">
    <source srcset="{{ pc_image | img_url: '2160x' }}"
            media="(max-width: 1080px)">
    <source srcset="{{ pc_image | img_url: '2400x' }}"
            media="(max-width: 1200px)">
    <source srcset="{{ pc_image | img_url: '3840x' }}"
            media="(max-width: 1920px)">
    <img src="{{ pc_image | img_url: '3840x' }}" alt="{{ alt }}" loading="lazy">
</picture>