
{%- if se_bks.size > 0 -%}
<div class="page-head t4s-pr t4s-oh page_bg_img {{se_stts.content_align}}"> 
   <div class="t4s-container t4s-pr t4s-z-100"> 
      {%- for block in se_bks -%}
      {%- assign bk_stts = block.settings -%}
        {%- capture heading_title -%}
          {%-case request.page_type -%}
            {%- when 'cart' -%}{{ 'cart.cart_page.title' | t }}
            {%- when 'customers/login' -%}{{ 'customer.login.title' | t }}
            {%- when 'customers/register' -%}{{ 'customer.register.title' | t }}
            {%- when 'customers/activate_account' -%}{{ 'customer.activate_account.title' | t }}
            {%- when 'customers/reset_password' -%}{{ 'customer.reset_password.title' | t }}
         		{%- when 'customers/order' -%}{{ 'customer.order.title' | t }}
         		{%- when 'customers/addresses' -%}{{ 'customer.addresses.title' | t }}
         		{%- when 'customers/account' -%}{{ 'customer.account.title' | t }} 
            {%- else -%}{{ page_title }} 
          {%- endcase -%}
        {%- endcapture -%}
      	{%- capture heading_content -%}
          {% if block.settings.heading == blank %} {{ heading_title }} {% else %} {{ block.settings.heading }} {% endif %} 
    		{%- endcapture -%}
        {%- case block.type -%}
            {%- when '1' -%}
            {%- assign general_block = true -%}
            <h1 class="title-head t4s-bl-item t4s-animation-none t4s-text-bl t4s-fnt-fm-{{bk_stts.fontf}} t4s-font-italic-{{bk_stts.font_italic}} t4s-uppercase-{{bk_stts.font_uppercase}} t4s-hidden-mobile-{{bk_stts.hidden_mobile}} t4s-br-mb-{{bk_stts.remove_br_tag}} t4s-text-shadow-{{bk_stts.text_shadow}}" id="b_{{block.id}}" {%- render 'bk_cus_style',type:'custom_text',bk_stts:bk_stts,ani_delay:ani_delay -%}>{{ heading_content}} </h1>
            {%- when '2' -%}
            {%- assign general_block = true -%}
            {% if block.settings.content == blank %}{% continue %}{% endif %}<div class="desc-head t4s-bl-item t4s-animation-none t4s-text-bl t4s-fnt-fm-{{bk_stts.fontf}} t4s-font-italic-{{bk_stts.font_italic}} t4s-uppercase-{{bk_stts.font_uppercase}} t4s-hidden-mobile-{{bk_stts.hidden_mobile}} t4s-br-mb-{{bk_stts.remove_br_tag}} t4s-text-shadow-{{bk_stts.text_shadow}}" id="b_{{block.id}}" {%- render 'bk_cus_style',type:'custom_text',bk_stts:bk_stts,ani_delay:ani_delay -%}>{{ block.settings.content }}</div> 
            {%- when '3' -%}
           	<nav class="breadcrumbs" role="navigation" aria-label="breadcrumbs" style="--brc-cl:{{bk_stts.breadcrumb_color}};--brc_mgb:{{bk_stts.brc_mgb}}px;">
    				<ul class="breadcrumbs__list">
    		           <li class="breadcrumbs__item">
    			          	<a href="{{ routes.root_url }}" class="t4s-dib">{{'general.breadcrumb.home' | t}}</a>  <svg class="icon-arrow" viewBox="0 0 100 100"><path d="M 10,50 L 60,100 L 70,90 L 30,50  L 70,10 L 60,0 Z" class="arrow" transform="translate(100, 100) rotate(180) "></path></svg>
    			        </li>
    			        <li class="breadcrumbs__item">{{ heading_content }}</li> 
    			    </ul>
    			</nav> 
    		{%- endcase -%} 
      {%- endfor -%}
   </div>
</div>
{%- endif -%} 
{%- if general_block -%}
    {{ 'general-block.css' | asset_url | stylesheet_tag }}
{%- endif -%}